<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/appearance" app:iconSpaceReserved="false">
        <CheckBoxPreference
            app:summary="@string/black_background_summary"
            app:key="black_background"
            app:iconSpaceReserved="false"
            android:title="@string/black_background" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about" app:iconSpaceReserved="false">

        <Preference
            app:iconSpaceReserved="false"
            app:key="privacy_policy"
            app:title="@string/privacy_policy" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="feedback"
            app:summary="@string/feedback_summary"
            app:title="@string/feedback" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="source_code"
            app:summary="@string/source_code_summary"
            app:title="@string/source_code" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="open_source_licenses"
            app:title="@string/open_source_licenses" />

        <Preference
            app:iconSpaceReserved="false"
            android:title="@string/xray_version"
            app:key="xray_version"
            app:summary="" />

        <Preference
            app:iconSpaceReserved="false"
            android:title="@string/app_version"
            app:key="app_version"
            app:summary="" />


    </PreferenceCategory>

</PreferenceScreen>